<Window x:Class="H2_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H2_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Background="LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97"/>
            <ColumnDefinition Width="210"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Login:" Margin="15 5 5 5"/>
        <TextBox x:Name="box1" Grid.Row="0" Grid.Column="1" Margin="5" BorderThickness="2"></TextBox>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Password:" Margin="15 5 5 5"/>
        <PasswordBox x:Name="box2" Grid.Row="1" Grid.Column="1" Margin="5" PasswordChar="*" BorderThickness="2"></PasswordBox>
        <Button x:Name="btn1" Grid.Row="2" Grid.Column="2" Content="Login" Width="50" Margin="5 0 0 5" HorizontalAlignment="Left" Click="btn1_Click"></Button>
    </Grid>
</Window>
