<Window x:Class="H3_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H3_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="#f2f2f2">
            <Label HorizontalAlignment="Center">Binding to Element</Label>
            <TextBox x:Name="box"  HorizontalAlignment="Center" Width="100" Height="20" Margin="5"></TextBox>
            <TextBlock HorizontalAlignment="Center" Width="100" Height="20" Margin="5" TextAlignment="Center" Text="{Binding Path=Text, ElementName=box}"></TextBlock> 
        </StackPanel>
        <StackPanel Grid.Column="1" Background="#e7e7e7">
            
        </StackPanel>
        <StackPanel Grid.Column="2" Background="#cecece">
            
        </StackPanel>

    </Grid>
</Window>
